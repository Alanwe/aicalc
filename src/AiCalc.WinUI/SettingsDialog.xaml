<?xml version="1.0" encoding="utf-8"?>
<ContentDialog
    x:Class="AiCalc.SettingsDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:AiCalc.Models"
    xmlns:conv="using:AiCalc.Converters"
    mc:Ignorable="d"
    Title="Settings"
    PrimaryButtonText="Save"
    CloseButtonText="Cancel"
    DefaultButton="Primary"
    Style="{StaticResource DefaultContentDialogStyle}">

    <ContentDialog.Resources>
        <conv:ObjectToBoolConverter x:Key="ObjectToBoolConverter" />
        <Style x:Key="SettingsSectionStyle" TargetType="Border">
            <Setter Property="Background" Value="{ThemeResource CardBackgroundFillColorDefaultBrush}" />
            <Setter Property="BorderBrush" Value="{ThemeResource CardStrokeColorDefaultBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="Padding" Value="16" />
            <Setter Property="Margin" Value="0,0,0,12" />
        </Style>
    </ContentDialog.Resources>

    <ScrollViewer MaxHeight="600" MaxWidth="800" MinHeight="600" MinWidth="800">
        <Pivot>
            <!-- AI Services Tab -->
            <PivotItem Header="AI Services">
                <StackPanel Spacing="16">
                    <Border Style="{StaticResource SettingsSectionStyle}">
                        <StackPanel Spacing="12">
                            <TextBlock Text="AI Services" 
                                       Style="{StaticResource SubtitleTextBlockStyle}" />
                            <TextBlock Text="Configure AI cloud service connections for your functions" 
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                       TextWrapping="Wrap"
                                       Margin="0,0,0,8" />

                            <!-- Services List -->
                            <ListView x:Name="ServicesListView"
                                      ItemsSource="{x:Bind Settings.Connections, Mode=OneWay}"
                                      SelectionMode="Single"
                                      Height="240"
                                      BorderBrush="{ThemeResource DividerStrokeColorDefaultBrush}"
                                      BorderThickness="1"
                                      CornerRadius="4">
                                <ListView.ItemTemplate>
                                    <DataTemplate x:DataType="models:WorkspaceConnection">
                                        <Grid Padding="8" ColumnSpacing="12">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>

                                            <!-- Icon -->
                                            <FontIcon Grid.Column="0" 
                                                      Glyph="&#xE753;" 
                                                      FontSize="24"
                                                      Foreground="{ThemeResource AccentFillColorDefaultBrush}" />

                                            <!-- Service Info -->
                                            <StackPanel Grid.Column="1" VerticalAlignment="Center" Spacing="4">
                                                <TextBlock Text="{x:Bind Name}" 
                                                           FontWeight="SemiBold" />
                                                <StackPanel Orientation="Horizontal" Spacing="8">
                                                    <TextBlock Text="{x:Bind Provider}" 
                                                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                               FontSize="12" />
                                                    <TextBlock Text="•" 
                                                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                               FontSize="12" />
                                                    <TextBlock Text="{x:Bind Model}" 
                                                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                               FontSize="12" />
                                                </StackPanel>
                                            </StackPanel>

                                            <!-- Default Badge -->
                                            <Border Grid.Column="2" 
                                                    Background="{ThemeResource AccentFillColorDefaultBrush}"
                                                    CornerRadius="4"
                                                    Padding="8,4"
                                                    Visibility="{x:Bind IsDefault}">
                                                <TextBlock Text="Default" 
                                                           FontSize="11"
                                                           FontWeight="SemiBold"
                                                           Foreground="White" />
                                            </Border>
                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>

                            <!-- Service Actions -->
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <Button Content="Add Service" 
                                        Click="AddService_Click"
                                        Style="{StaticResource AccentButtonStyle}">
                                    <Button.KeyboardAccelerators>
                                        <KeyboardAccelerator Key="N" Modifiers="Control" />
                                    </Button.KeyboardAccelerators>
                                </Button>
                                <Button Content="Edit" 
                                        Click="EditService_Click"
                                        IsEnabled="{x:Bind ServicesListView.SelectedItem, Mode=OneWay, Converter={StaticResource ObjectToBoolConverter}}" />
                                <Button Content="Remove" 
                                        Click="RemoveService_Click"
                                        IsEnabled="{x:Bind ServicesListView.SelectedItem, Mode=OneWay, Converter={StaticResource ObjectToBoolConverter}}" />
                                <Button Content="Set as Default"
                                        Click="SetDefault_Click"
                                        IsEnabled="{x:Bind ServicesListView.SelectedItem, Mode=OneWay, Converter={StaticResource ObjectToBoolConverter}}" />
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Default Models Section -->
                    <Border Style="{StaticResource SettingsSectionStyle}">
                        <StackPanel Spacing="12">
                            <TextBlock Text="Default Models" 
                                       Style="{StaticResource SubtitleTextBlockStyle}" />
                            <TextBlock Text="Set default models for AI function types" 
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                       TextWrapping="Wrap"
                                       Margin="0,0,0,8" />

                            <TextBox Header="Default Text Model"
                                     Text="{x:Bind Settings.DefaultTextModel, Mode=TwoWay}"
                                     PlaceholderText="e.g., gpt-4, claude-3" />

                            <TextBox Header="Default Image Model"
                                     Text="{x:Bind Settings.DefaultImageModel, Mode=TwoWay}"
                                     PlaceholderText="e.g., dall-e-3, stable-diffusion" />

                            <TextBox Header="Default Video Model"
                                     Text="{x:Bind Settings.DefaultVideoModel, Mode=TwoWay}"
                                     PlaceholderText="e.g., gen-2, runway" />
                        </StackPanel>
                    </Border>
                </StackPanel>
            </PivotItem>

            <!-- Performance Tab (Task 9) -->
            <PivotItem Header="Performance">
                <StackPanel Spacing="16">
                    <Border Style="{StaticResource SettingsSectionStyle}">
                        <StackPanel Spacing="16">
                            <TextBlock Text="Multi-Threading" 
                                       Style="{StaticResource SubtitleTextBlockStyle}" />
                            
                            <StackPanel Spacing="8">
                                <TextBlock Text="Maximum Parallel Threads"
                                           FontWeight="SemiBold"/>
                                <TextBlock Text="Controls how many cells can be evaluated simultaneously"
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                           TextWrapping="Wrap"
                                           FontSize="12"/>
                                
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <Slider x:Name="MaxThreadsSlider"
                                            Grid.Column="0"
                                            Minimum="1"
                                            Maximum="32"
                                            StepFrequency="1"
                                            TickFrequency="4"
                                            TickPlacement="BottomRight"
                                            Value="{x:Bind Settings.MaxEvaluationThreads, Mode=TwoWay}"
                                            ValueChanged="MaxThreadsSlider_ValueChanged"
                                            Margin="0,0,12,0"/>
                                    
                                    <TextBlock x:Name="MaxThreadsLabel"
                                               Grid.Column="1"
                                               FontWeight="SemiBold"
                                               FontSize="18"
                                               VerticalAlignment="Center"
                                               MinWidth="40"
                                               TextAlignment="Center"/>
                                </Grid>
                                
                                <TextBlock x:Name="MaxThreadsDescription"
                                           FontSize="12"
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            </StackPanel>

                            <StackPanel Spacing="8">
                                <TextBlock Text="Default Evaluation Timeout"
                                           FontWeight="SemiBold"/>
                                <TextBlock Text="Maximum time (in seconds) for a single cell evaluation"
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                           TextWrapping="Wrap"
                                           FontSize="12"/>
                                
                                <NumberBox x:Name="TimeoutNumberBox"
                                           Minimum="10"
                                           Maximum="600"
                                           SpinButtonPlacementMode="Inline"
                                           SmallChange="10"
                                           LargeChange="50"
                                           Value="{x:Bind Settings.DefaultEvaluationTimeoutSeconds, Mode=TwoWay}"/>
                                
                                <TextBlock Text="Recommended: 100 seconds for AI functions, 30 seconds for built-in functions"
                                           FontSize="11"
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                           TextWrapping="Wrap"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </PivotItem>

            <!-- Appearance Tab (Task 10) -->
            <PivotItem Header="Appearance">
                <StackPanel Spacing="16">
                    <!-- Application Theme Section -->
                    <Border Style="{StaticResource SettingsSectionStyle}">
                        <StackPanel Spacing="16">
                            <TextBlock Text="Application Theme" 
                                       Style="{StaticResource SubtitleTextBlockStyle}" />
                            <TextBlock Text="Change the overall appearance of the application"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                       TextWrapping="Wrap"
                                       FontSize="12"
                                       Margin="0,0,0,8"/>
                            
                            <ComboBox x:Name="AppThemeComboBox"
                                      Header="Application Theme"
                                      HorizontalAlignment="Stretch"
                                      SelectionChanged="AppThemeComboBox_SelectionChanged">
                                <ComboBoxItem Content="Use System Theme" Tag="System"/>
                                <ComboBoxItem Content="Light" Tag="Light"/>
                                <ComboBoxItem Content="Dark" Tag="Dark"/>
                            </ComboBox>
                            
                            <TextBlock Text="System theme will automatically match your Windows theme preference"
                                       FontSize="11"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                       TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Cell Visual States Section -->
                    <Border Style="{StaticResource SettingsSectionStyle}">
                        <StackPanel Spacing="16">
                            <TextBlock Text="Cell Visual States" 
                                       Style="{StaticResource SubtitleTextBlockStyle}" />
                            <TextBlock Text="Choose a color theme for cell state indicators"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                       TextWrapping="Wrap"
                                       FontSize="12"
                                       Margin="0,0,0,8"/>
                            
                            <ComboBox x:Name="ThemeComboBox"
                                      Header="Visual Theme"
                                      HorizontalAlignment="Stretch"
                                      SelectionChanged="ThemeComboBox_SelectionChanged">
                                <ComboBoxItem Content="Light" Tag="Light"/>
                                <ComboBoxItem Content="Dark" Tag="Dark"/>
                                <ComboBoxItem Content="High Contrast" Tag="HighContrast"/>
                                <ComboBoxItem Content="Custom" Tag="Custom"/>
                            </ComboBox>

                            <!-- Theme Preview -->
                            <Border BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                    BorderThickness="1"
                                    CornerRadius="4"
                                    Padding="12"
                                    Background="{ThemeResource LayerFillColorDefaultBrush}">
                                <StackPanel Spacing="8">
                                    <TextBlock Text="Preview" 
                                               FontWeight="SemiBold"
                                               FontSize="14"/>
                                    
                                    <Grid ColumnSpacing="8" RowSpacing="4">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="60"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <TextBlock Grid.Row="0" Grid.Column="0" Text="✅" FontSize="16"/>
                                        <TextBlock Grid.Row="0" Grid.Column="1" Text="Just Updated" VerticalAlignment="Center"/>
                                        <Border Grid.Row="0" Grid.Column="2" x:Name="PreviewJustUpdated" Height="24" CornerRadius="4"/>

                                        <TextBlock Grid.Row="1" Grid.Column="0" Text="⏳" FontSize="16"/>
                                        <TextBlock Grid.Row="1" Grid.Column="1" Text="Calculating" VerticalAlignment="Center"/>
                                        <Border Grid.Row="1" Grid.Column="2" x:Name="PreviewCalculating" Height="24" CornerRadius="4"/>

                                        <TextBlock Grid.Row="2" Grid.Column="0" Text="🔵" FontSize="16"/>
                                        <TextBlock Grid.Row="2" Grid.Column="1" Text="Stale (Needs Recalc)" VerticalAlignment="Center"/>
                                        <Border Grid.Row="2" Grid.Column="2" x:Name="PreviewStale" Height="24" CornerRadius="4"/>

                                        <TextBlock Grid.Row="3" Grid.Column="0" Text="🟠" FontSize="16"/>
                                        <TextBlock Grid.Row="3" Grid.Column="1" Text="Manual Update" VerticalAlignment="Center"/>
                                        <Border Grid.Row="3" Grid.Column="2" x:Name="PreviewManualUpdate" Height="24" CornerRadius="4"/>

                                        <TextBlock Grid.Row="4" Grid.Column="0" Text="❌" FontSize="16"/>
                                        <TextBlock Grid.Row="4" Grid.Column="1" Text="Error" VerticalAlignment="Center"/>
                                        <Border Grid.Row="4" Grid.Column="2" x:Name="PreviewError" Height="24" CornerRadius="4"/>

                                        <TextBlock Grid.Row="5" Grid.Column="0" Text="🔗" FontSize="16"/>
                                        <TextBlock Grid.Row="5" Grid.Column="1" Text="In Dependency Chain" VerticalAlignment="Center"/>
                                        <Border Grid.Row="5" Grid.Column="2" x:Name="PreviewDependency" Height="24" CornerRadius="4"/>
                                    </Grid>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </PivotItem>

            <!-- Workspace Tab -->
            <PivotItem Header="Workspace">
                <StackPanel Spacing="16">
                    <!-- AutoSave Section (Phase 6) -->
                    <Border Style="{StaticResource SettingsSectionStyle}">
                        <StackPanel Spacing="12">
                            <TextBlock Text="AutoSave" 
                                       Style="{StaticResource SubtitleTextBlockStyle}" />
                            <TextBlock Text="Automatically save your workbook at regular intervals"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                       TextWrapping="Wrap"
                                       FontSize="12"
                                       Margin="0,0,0,8"/>
                            
                            <ToggleSwitch x:Name="AutoSaveToggle"
                                          Header="Enable AutoSave"
                                          OnContent="Enabled"
                                          OffContent="Disabled"
                                          Toggled="AutoSaveToggle_Toggled" />

                            <StackPanel Spacing="8" x:Name="AutoSaveIntervalPanel">
                                <TextBlock Text="AutoSave Interval"
                                           FontWeight="SemiBold"/>
                                <TextBlock Text="How often to automatically save your workbook"
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                           TextWrapping="Wrap"
                                           FontSize="12"/>
                                
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <Slider x:Name="AutoSaveIntervalSlider"
                                            Grid.Column="0"
                                            Minimum="1"
                                            Maximum="60"
                                            StepFrequency="1"
                                            TickFrequency="5"
                                            TickPlacement="BottomRight"
                                            ValueChanged="AutoSaveIntervalSlider_ValueChanged"
                                            Margin="0,0,12,0"/>
                                    
                                    <TextBlock x:Name="AutoSaveIntervalLabel"
                                               Grid.Column="1"
                                               FontWeight="SemiBold"
                                               FontSize="18"
                                               VerticalAlignment="Center"
                                               MinWidth="80"
                                               TextAlignment="Center"/>
                                </Grid>
                                
                                <TextBlock Text="Backup files are saved with '_autosave' suffix"
                                           FontSize="11"
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                           TextWrapping="Wrap"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <Border Style="{StaticResource SettingsSectionStyle}">
                        <StackPanel Spacing="12">
                            <TextBlock Text="Workspace" 
                                       Style="{StaticResource SubtitleTextBlockStyle}" />
                            
                            <ToggleSwitch Header="Auto-save workbooks"
                                          IsOn="{x:Bind Settings.AutoSave, Mode=TwoWay}" />

                            <StackPanel Spacing="4">
                                <TextBlock Text="Workspace Path" 
                                           Style="{StaticResource BodyStrongTextBlockStyle}" />
                                <Grid ColumnSpacing="8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <TextBox Grid.Column="0"
                                             Text="{x:Bind Settings.WorkspacePath, Mode=TwoWay}"
                                             PlaceholderText="C:\AiCalc\Workspaces" />
                                    <Button Grid.Column="1" Content="Browse..." Click="BrowseWorkspace_Click" />
                                </Grid>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </PivotItem>

            <!-- Python Tab (Phase 7) -->
            <PivotItem Header="Python">
                <StackPanel Spacing="16">
                    <!-- Python Environment -->
                    <Border Style="{StaticResource SettingsSectionStyle}">
                        <StackPanel Spacing="12">
                            <TextBlock Text="Python Environment" 
                                       Style="{StaticResource SubtitleTextBlockStyle}" />
                            <TextBlock Text="Select the Python environment to use for Python SDK integration" 
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                       TextWrapping="Wrap"
                                       Margin="0,0,0,8" />

                            <!-- Python Bridge Enable/Disable -->
                            <ToggleSwitch x:Name="PythonBridgeToggle"
                                          Header="Enable Python SDK Bridge"
                                          IsOn="True"
                                          Toggled="PythonBridgeToggle_Toggled" />

                            <!-- Environment Selection -->
                            <StackPanel Spacing="8">
                                <TextBlock Text="Python Environment:" FontWeight="SemiBold" />
                                <ComboBox x:Name="PythonEnvironmentComboBox"
                                          HorizontalAlignment="Stretch"
                                          SelectionChanged="PythonEnvironmentComboBox_SelectionChanged"
                                          DisplayMemberPath="Name"
                                          PlaceholderText="Select Python environment...">
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate>
                                            <Grid Padding="4">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto" />
                                                    <RowDefinition Height="Auto" />
                                                </Grid.RowDefinitions>
                                                <TextBlock Grid.Row="0" 
                                                           Text="{Binding Name}" 
                                                           FontWeight="SemiBold" />
                                                <StackPanel Grid.Row="1" Orientation="Horizontal" Spacing="8">
                                                    <TextBlock Text="{Binding Type}" 
                                                               FontSize="11"
                                                               Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                                    <TextBlock Text="•" 
                                                               FontSize="11"
                                                               Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                                    <TextBlock Text="{Binding Version}" 
                                                               FontSize="11"
                                                               Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                                </StackPanel>
                                            </Grid>
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </ComboBox>

                                <TextBlock x:Name="PythonPathText"
                                           Text=""
                                           FontSize="11"
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                           TextWrapping="Wrap"
                                           Margin="0,4,0,0" />
                            </StackPanel>

                            <!-- SDK Installation Status -->
                            <StackPanel x:Name="SdkStatusPanel" Spacing="8" Margin="0,8,0,0">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon x:Name="SdkStatusIcon"
                                              Glyph="&#xE73E;"
                                              FontSize="16" />
                                    <TextBlock x:Name="SdkStatusText"
                                               Text="Checking SDK installation..."
                                               VerticalAlignment="Center" />
                                </StackPanel>
                                <Button x:Name="InstallSdkButton"
                                        Content="Install aicalc-sdk"
                                        Click="InstallSdkButton_Click"
                                        Visibility="Collapsed" />
                            </StackPanel>

                            <!-- Actions -->
                            <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,8,0,0">
                                <Button Content="Refresh Environments" 
                                        Click="RefreshPythonEnvironments_Click">
                                    <Button.KeyboardAccelerators>
                                        <KeyboardAccelerator Key="F5" />
                                    </Button.KeyboardAccelerators>
                                </Button>
                                <Button Content="Test Connection" 
                                        Click="TestPythonConnection_Click"
                                        IsEnabled="{x:Bind PythonEnvironmentComboBox.SelectedItem, Converter={StaticResource ObjectToBoolConverter}, Mode=OneWay}" />
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Python Functions Directory (minimal placeholder) -->
                    <Border Style="{StaticResource SettingsSectionStyle}">
                        <StackPanel Spacing="12">
                            <TextBlock Text="Custom Python Functions"
                                       Style="{StaticResource SubtitleTextBlockStyle}" />
                            <TextBlock Text="Specify a directory containing Python files with @aicalc_function decorated functions"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                       TextWrapping="Wrap"
                                       Margin="0,0,0,8" />

                            <StackPanel Spacing="8">
                                <TextBlock Text="Functions Directory:" FontWeight="SemiBold" />
                                <Grid ColumnSpacing="8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <TextBox x:Name="FunctionsDirectoryTextBox"
                                             Grid.Column="0"
                                             PlaceholderText="Select folder with Python functions..."
                                             IsReadOnly="True" />
                                    <Button Grid.Column="1"
                                            Content="Browse..."
                                            Click="BrowseFunctionsDirectory_Click" />
                                </Grid>
                            </StackPanel>

                            <ToggleSwitch x:Name="HotReloadToggle"
                                          Header="Enable Hot Reload"
                                          IsOn="True"
                                          Toggled="HotReloadToggle_Toggled" />
                            <TextBlock Text="Automatically rescan when Python files change."
                                       FontSize="11"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}" />

                            <StackPanel Spacing="8">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <TextBlock Text="Discovered Functions:" FontWeight="SemiBold" VerticalAlignment="Center" />
                                    <TextBlock x:Name="FunctionCountText"
                                               Text="(No scan yet)"
                                               FontSize="11"
                                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                               VerticalAlignment="Center" />
                                </StackPanel>
                                <Border BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                        BorderThickness="1"
                                        CornerRadius="4"
                                        MaxHeight="220">
                                    <ListView x:Name="DiscoveredFunctionsList"
                                              SelectionMode="None">
                                        <ListView.ItemTemplate>
                                            <DataTemplate>
                                                <Grid Padding="8,4" ColumnSpacing="12">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto" />
                                                        <ColumnDefinition Width="*" />
                                                        <ColumnDefinition Width="Auto" />
                                                    </Grid.ColumnDefinitions>
                                                    <FontIcon Grid.Column="0"
                                                              Glyph="&#xE73E;"
                                                              FontSize="14"
                                                              Foreground="{ThemeResource AccentFillColorDefaultBrush}"
                                                              Margin="0,0,8,0" />
                                                    <StackPanel Grid.Column="1" Spacing="4">
                                                        <TextBlock Text="{Binding Name}"
                                                                   FontWeight="SemiBold"
                                                                   FontSize="13" />
                                                        <TextBlock Text="{Binding Description}"
                                                                   FontSize="11"
                                                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                                   TextWrapping="WrapWholeWords"
                                                                   MaxLines="2" />
                                                        <TextBlock Text="{Binding FilePath}"
                                                                   FontSize="10"
                                                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                                   Opacity="0.8"
                                                                   TextTrimming="CharacterEllipsis" />
                                                        <Button Content="Open in VS Code"
                                                                Tag="{Binding FilePath}"
                                                                Click="OpenFunctionInVsCode_Click"
                                                                HorizontalAlignment="Left"
                                                                Margin="0,2,0,0"
                                                                Padding="10,4" />
                                                    </StackPanel>
                                                    <TextBlock Grid.Column="2"
                                                               Text="{Binding Category}"
                                                               FontSize="11"
                                                               Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                                               VerticalAlignment="Center"
                                                               Margin="8,0,0,0" />
                                                </Grid>
                                            </DataTemplate>
                                        </ListView.ItemTemplate>
                                    </ListView>
                                </Border>
                            </StackPanel>

                            <Button x:Name="ScanFunctionsButton"
                                    Content="Scan for Functions"
                                    Click="ScanFunctions_Click">
                                <Button.KeyboardAccelerators>
                                    <KeyboardAccelerator Key="F5" Modifiers="Control" />
                                </Button.KeyboardAccelerators>
                            </Button>
                        </StackPanel>
                    </Border>

                    <!-- Python SDK Info -->
                    <Border Style="{StaticResource SettingsSectionStyle}">
                        <StackPanel Spacing="8">
                            <TextBlock Text="About Python SDK" 
                                       Style="{StaticResource SubtitleTextBlockStyle}" />
                            <TextBlock TextWrapping="Wrap"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}">
                                The Python SDK allows you to interact with AiCalc from Python scripts via Named Pipes IPC. 
                                You can read/write cells, execute functions, and automate workflows.
                            </TextBlock>
                            <TextBlock TextWrapping="Wrap"
                                       Margin="0,4,0,0"
                                       FontFamily="Consolas"
                                       FontSize="11">
                                from aicalc_sdk import connect<LineBreak/>
                                <LineBreak/>
                                with connect() as client:<LineBreak/>
                                    client.set_value('A1', 42)<LineBreak/>
                                    value = client.get_value('A1')
                            </TextBlock>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </PivotItem>
        </Pivot>
    </ScrollViewer>
</ContentDialog>
