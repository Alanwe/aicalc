<Page
    x:Class="AiCalc.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AiCalc"
    xmlns:models="using:AiCalc.Models"
    xmlns:services="using:AiCalc.Services"
    xmlns:converters="using:AiCalc.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
    <!-- Cell Context Menu (Phase 5 Task 16) -->
    <converters:BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <MenuFlyout x:Key="CellContextMenu">
            <MenuFlyoutItem Text="✂️ Cut" Click="Cut_Click" />
            <MenuFlyoutItem Text="📋 Copy" Click="Copy_Click" />
            <MenuFlyoutItem Text="📌 Paste" Click="Paste_Click" />
            <MenuFlyoutSeparator/>
            <MenuFlyoutItem Text="🗑️ Clear Contents" Click="ClearContents_Click" />
            <MenuFlyoutSeparator/>
            <MenuFlyoutSubItem Text="➕ Insert">
                <MenuFlyoutItem Text="↑ Row Above" Click="InsertRowAbove_Click" />
                <MenuFlyoutItem Text="↓ Row Below" Click="InsertRowBelow_Click" />
                <MenuFlyoutItem Text="← Column Left" Click="InsertColumnLeft_Click" />
                <MenuFlyoutItem Text="→ Column Right" Click="InsertColumnRight_Click" />
            </MenuFlyoutSubItem>
            <MenuFlyoutSubItem Text="➖ Delete">
                <MenuFlyoutItem Text="❌ Row" Click="DeleteRow_Click" />
                <MenuFlyoutItem Text="❌ Column" Click="DeleteColumn_Click" />
            </MenuFlyoutSubItem>
            <MenuFlyoutSeparator/>
            <MenuFlyoutItem Text="⬇️ Fill Down" Click="FillDown_Click" />
            <MenuFlyoutItem Text="➡️ Fill Right" Click="FillRight_Click" />
            <MenuFlyoutSeparator/>
            <MenuFlyoutItem Text="🎨 Format Cell" Click="FormatCell_Click" />
            <MenuFlyoutItem Text="🖌️ Format Painter" Click="FormatPainter_Click" />
            <MenuFlyoutItem Text="🔁 Extract Formula..." Click="ExtractFormula_Click" />
            <MenuFlyoutItem Text="📜 View History" Click="ViewHistory_Click" />
        </MenuFlyout>

        <!-- Column header context menu (Phase 8 Task 26) -->
        <MenuFlyout x:Key="ColumnHeaderMenu">
            <MenuFlyoutItem Text="🙈 Hide Column" Click="HideColumn_Click" />
            <MenuFlyoutItem Text="🙊 Unhide All Columns" Click="UnhideAllColumns_Click" />
            <MenuFlyoutSeparator />
            <MenuFlyoutItem Text="❄️ Freeze Columns Here" Click="FreezeColumns_Click" />
            <MenuFlyoutItem Text="🔥 Unfreeze All" Click="UnfreezeAll_Click" />
            <MenuFlyoutSeparator />
            <MenuFlyoutItem Text="↔ Auto-fit Column Width" Click="AutoFitColumn_Click" />
            <MenuFlyoutItem Text="📏 Set Custom Width..." Click="SetColumnWidth_Click" />
            <MenuFlyoutSeparator />
            <MenuFlyoutItem Text="⟲ Reset to Default" Click="ResetColumnWidth_Click" />
        </MenuFlyout>

        <MenuFlyout x:Key="RowHeaderMenu">
            <MenuFlyoutItem Text="🙈 Hide Row" Click="HideRow_Click" />
            <MenuFlyoutItem Text="🙊 Unhide All Rows" Click="UnhideAllRows_Click" />
            <MenuFlyoutSeparator />
            <MenuFlyoutItem Text="❄️ Freeze Rows Here" Click="FreezeRows_Click" />
            <MenuFlyoutItem Text="🔥 Unfreeze All" Click="UnfreezeAll_Click" />
        </MenuFlyout>
    </Page.Resources>

    <Grid Background="#1A1A1A">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Background="#2D2D30" Padding="16,12">
            <StackPanel Orientation="Horizontal" Spacing="12" VerticalAlignment="Center">
                <TextBlock Text="⚡ AiCalc Studio" FontSize="18" FontWeight="SemiBold" Foreground="White" />
                <TextBox Width="240"
                         PlaceholderText="Workbook title"
                         Text="{x:Bind ViewModel.Title, Mode=TwoWay}"
                         VerticalAlignment="Center" />
                <Button Content="➕ New Sheet"
                        Click="NewSheetButton_Click" />
        <Button Content="🔄 Recalculate (F9)"
                        Click="RecalculateButton_Click"
                        ToolTipService.ToolTip="Recalculate all cells (skips Manual mode cells)" />
        <Button Content="💾 Save"
                        Click="SaveButton_Click" />
                <Button Content="📂 Load"
                        Click="LoadButton_Click" />
                <Button Content="📤 Export CSV"
                        Click="ExportCsvButton_Click"
                        ToolTipService.ToolTip="Export current sheet to CSV" />
                <Button Content="📥 Import CSV"
                        Click="ImportCsvButton_Click"
                        ToolTipService.ToolTip="Import CSV as new sheet" />
                <Button Content="⚙️ Settings"
                        Click="SettingsButton_Click" />
            </StackPanel>
        </Grid>

        <!-- Main Content -->
        <Grid x:Name="MainLayoutGrid" Grid.Row="1" Padding="16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition x:Name="FunctionsColumn" Width="280"/>
                <ColumnDefinition Width="8"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="8"/>
                <ColumnDefinition x:Name="InspectorColumn" Width="320"/>
            </Grid.ColumnDefinitions>
            
            <!-- Left Panel - Functions -->
            <Border x:Name="FunctionsPanel" Grid.Column="0" Background="#2D2D30" Padding="16" CornerRadius="8" Margin="0,0,6,0">
                <StackPanel Spacing="12">
                    <Grid>
                        <TextBlock Text="📚 Functions" FontSize="16" FontWeight="SemiBold" Foreground="White" HorizontalAlignment="Left" />
                        <Button x:Name="ToggleFunctionsButton" 
                                Content="◀" 
                                Click="ToggleFunctionsPanel_Click"
                                Background="Transparent"
                                BorderThickness="0"
                                FontSize="14"
                                Foreground="White"
                                HorizontalAlignment="Right"
                                ToolTipService.ToolTip="Hide Functions Panel" />
                    </Grid>
                    <ScrollViewer MaxHeight="600" VerticalScrollBarVisibility="Auto">
                        <StackPanel x:Name="FunctionsList" Spacing="8"/>
                    </ScrollViewer>
                </StackPanel>
            </Border>

            <!-- Left Splitter / Show Functions Button -->
        <Border x:Name="LeftSplitter" Grid.Column="1"
            Margin="0"
            Background="#22FFFFFF"
            CornerRadius="2"
            PointerPressed="LeftSplitter_PointerPressed"
            PointerMoved="LeftSplitter_PointerMoved"
            PointerReleased="LeftSplitter_PointerReleased"
            PointerCaptureLost="LeftSplitter_PointerReleased"
            PointerEntered="Splitter_PointerEntered"
            PointerExited="Splitter_PointerExited">
            <Button x:Name="ShowFunctionsButton"
                    Content="▶"
                    Visibility="Collapsed"
                    Click="ToggleFunctionsPanel_Click"
                    Background="#44FFFFFF"
                    BorderThickness="0"
                    FontSize="12"
                    Foreground="White"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Width="32"
                    Height="32"
                    CornerRadius="16"
                    ToolTipService.ToolTip="Show Functions Panel" />
        </Border>
            
            <!-- Center Panel - Spreadsheet -->
            <Border Grid.Column="2" Background="#2D2D30" Padding="8" CornerRadius="8">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Sheet Tabs -->
                    <TabView x:Name="SheetTabs" 
                             Grid.Row="0"
                             TabWidthMode="Equal"
                             SelectionChanged="SheetTabs_SelectionChanged"
                             AddTabButtonClick="AddTab_Click"/>
                    
                    <!-- Spreadsheet Grid -->
                    <ScrollViewer Grid.Row="1" 
                                  HorizontalScrollBarVisibility="Visible" 
                                  VerticalScrollBarVisibility="Visible"
                                  Background="#1E1E1E">
                        <Grid>
                            <Grid x:Name="SpreadsheetGrid" Margin="12"/>
                            <TextBox x:Name="CellEditBox"
                                     Visibility="Collapsed"
                                     Background="White"
                                     Foreground="Black"
                                     BorderBrush="#00D4FF"
                                     BorderThickness="2"
                                     Padding="8"
                                     FontSize="13"
                                     TextWrapping="NoWrap"
                                     GotFocus="CellEditBox_GotFocus"
                                     LostFocus="CellEditBox_LostFocus"
                                     KeyDown="CellEditBox_KeyDown"/>
                        </Grid>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- Right Splitter / Show Inspector Button -->
        <Border x:Name="RightSplitter" Grid.Column="3"
            Margin="0"
            Background="#22FFFFFF"
            CornerRadius="2"
            PointerPressed="RightSplitter_PointerPressed"
            PointerMoved="RightSplitter_PointerMoved"
            PointerReleased="RightSplitter_PointerReleased"
            PointerCaptureLost="RightSplitter_PointerReleased"
            PointerEntered="Splitter_PointerEntered"
            PointerExited="Splitter_PointerExited">
            <Button x:Name="ShowInspectorButton"
                    Content="◀"
                    Visibility="Collapsed"
                    Click="ToggleInspectorPanel_Click"
                    Background="#44FFFFFF"
                    BorderThickness="0"
                    FontSize="12"
                    Foreground="White"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Width="32"
                    Height="32"
                    CornerRadius="16"
                    ToolTipService.ToolTip="Show Inspector Panel" />
        </Border>
            
            <!-- Right Panel - Cell Inspector -->
            <Border x:Name="InspectorPanel" Grid.Column="4" Background="#2D2D30" Padding="16" CornerRadius="8" Margin="6,0,0,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Spacing="16">
                        <Grid>
                            <TextBlock Text="🔍 Cell Inspector" FontSize="16" FontWeight="SemiBold" Foreground="White" HorizontalAlignment="Left" />
                            <Button x:Name="ToggleInspectorButton" 
                                    Content="▶" 
                                    Click="ToggleInspectorPanel_Click"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    FontSize="14"
                                    Foreground="White"
                                    HorizontalAlignment="Right"
                                    ToolTipService.ToolTip="Hide Inspector Panel" />
                        </Grid>
                        
                        <StackPanel x:Name="CellInspectorPanel" Spacing="12" Visibility="Collapsed">
                            <TextBlock x:Name="CellLabel" 
                                       Foreground="#00D4FF" 
                                       FontSize="16" 
                                       FontWeight="SemiBold" />
                            
                            <StackPanel Spacing="6">
                                <TextBlock Text="Value" Foreground="#CCFFFFFF" FontSize="13" FontWeight="SemiBold" />
                                <TextBox x:Name="CellValueBox" 
                                         AcceptsReturn="True" 
                                         Height="70" 
                                         TextWrapping="Wrap"
                                         TextChanged="CellValue_Changed" />
                            </StackPanel>
                            
                            <StackPanel Spacing="6">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <TextBlock Text="Formula" Foreground="#CCFFFFFF" FontSize="13" FontWeight="SemiBold" />
                                    <TextBlock x:Name="FormulaSyntaxInfo" 
                                               Foreground="#88FFFFFF" 
                                               FontSize="11" 
                                               VerticalAlignment="Center"
                                               Visibility="Collapsed" />
                                </StackPanel>
                                <Grid>
                                    <TextBox x:Name="CellFormulaBox" 
                                             PlaceholderText="=SUM(A1,A2)"
                                             Height="40"
                                             TextChanged="CellFormula_Changed"
                            GotFocus="CellFormulaBox_GotFocus"
                            LostFocus="CellFormulaBox_LostFocus"
                                             KeyDown="CellFormulaBox_KeyDown" />
                                    
                                    <!-- Function Autocomplete Popup -->
                                    <Popup x:Name="FunctionAutocompletePopup"
                                           IsLightDismissEnabled="True"
                                           IsOpen="False">
                                        <Border Background="{ThemeResource LayerFillColorDefaultBrush}"
                                                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                                BorderThickness="1"
                                                CornerRadius="4"
                                                Padding="4"
                                                MaxHeight="200">
                                            <ListView x:Name="FunctionAutocompleteList"
                                                      SelectionMode="Single"
                                                      ItemClick="FunctionAutocomplete_ItemClick"
                                                      IsItemClickEnabled="True"
                                                      MinWidth="240">
                                                <ListView.ItemTemplate>
                                                    <DataTemplate x:DataType="models:FunctionSuggestion">
                                                        <StackPanel Padding="8,4" Spacing="4">
                                                            <StackPanel Orientation="Horizontal" Spacing="6">
                                                                <TextBlock Text="{Binding CategoryGlyph}"
                                                                           FontSize="13"
                                                                           VerticalAlignment="Center"/>
                                                                <TextBlock Text="{Binding Name}"
                                                                           FontWeight="SemiBold"/>
                                                                <TextBlock Text="{Binding CategoryLabel}"
                                                                           FontSize="11"
                                                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                                            </StackPanel>
                                                            <TextBlock Text="{Binding Description}"
                                                                       FontSize="11"
                                                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                                       TextWrapping="Wrap"/>
                                                            <TextBlock Text="{Binding TypeHint}"
                                                                       FontSize="10"
                                                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                                       Visibility="{Binding HasTypeHint, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                                            <TextBlock Text="{Binding ProviderHint}"
                                                                       FontSize="10"
                                                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                                       Visibility="{Binding HasProviderHint, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                                        </StackPanel>
                                                    </DataTemplate>
                                                </ListView.ItemTemplate>
                                            </ListView>
                                        </Border>
                                    </Popup>

                                    <!-- Parameter Hint Popup -->
                                    <Popup x:Name="ParameterHintPopup"
                                           IsOpen="False"
                                           IsLightDismissEnabled="True">
                                        <Border Background="#2D2D30"
                                                BorderBrush="#55FFFFFF"
                                                BorderThickness="1"
                                                CornerRadius="6"
                                                Padding="8"
                                                MaxWidth="320">
                                            <StackPanel Spacing="4">
                                                <TextBlock x:Name="ParameterHintFunctionName"
                                                           Text="SUM"
                                                           FontWeight="SemiBold"
                                                           Foreground="White"/>
                                                <ItemsControl x:Name="ParameterHintList">
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate x:DataType="local:ParameterHintItem">
                                                            <StackPanel Spacing="2">
                                                                <TextBlock Text="{x:Bind Name}"
                                                                           FontWeight="{x:Bind Weight}"
                                                                           Foreground="{x:Bind Brush}"
                                                                           FontSize="12"/>
                                                                <TextBlock Text="{x:Bind Description}"
                                                                           Foreground="#88FFFFFF"
                                                                           FontSize="10"
                                                                           TextWrapping="Wrap"
                                                                           Visibility="{x:Bind DescriptionVisibility}"/>
                                                            </StackPanel>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                                <TextBlock x:Name="ParameterHintDescription"
                                                           Text=""
                                                           Foreground="#88FFFFFF"
                                                           TextWrapping="Wrap"
                                                           FontSize="11"/>
                                            </StackPanel>
                                        </Border>
                                    </Popup>
                                </Grid>
                            </StackPanel>
                            
                            <StackPanel Spacing="6">
                                <TextBlock Text="Automation" Foreground="#CCFFFFFF" FontSize="13" FontWeight="SemiBold" />
                                <ComboBox x:Name="AutomationModeBox"
                                          HorizontalAlignment="Stretch"
                                          SelectionChanged="AutomationMode_Changed">
                                    <ComboBoxItem Content="Manual" IsSelected="True"/>
                                    <ComboBoxItem Content="OnEdit"/>
                                    <ComboBoxItem Content="OnLoad"/>
                                    <ComboBoxItem Content="Continuous"/>
                                </ComboBox>
                            </StackPanel>
                            
                            <Button Content="▶ Evaluate Cell" 
                                    Click="EvaluateCell_Click"
                                    HorizontalAlignment="Stretch" />
                            
                            <StackPanel Spacing="6">
                                <TextBlock Text="Notes" Foreground="#CCFFFFFF" FontSize="13" FontWeight="SemiBold" />
                                <TextBox x:Name="CellNotesBox" 
                                         AcceptsReturn="True" 
                                         Height="80"
                                         TextWrapping="Wrap"
                                         PlaceholderText="Add notes..."
                                         TextChanged="CellNotes_Changed" />
                            </StackPanel>
                        </StackPanel>
                        
                        <StackPanel x:Name="NoCellPanel" Spacing="8">
                            <TextBlock Text="💡 No cell selected" 
                                       Foreground="#88FFFFFF"
                                       FontSize="14"
                                       TextAlignment="Center" />
                            <TextBlock Text="Click on a cell to edit" 
                                       Foreground="#55FFFFFF"
                                       FontSize="12"
                                       TextWrapping="Wrap"
                                       TextAlignment="Center" />
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <Grid Grid.Row="2" Background="#252526" Height="32" Padding="16,0">
            <StackPanel Orientation="Horizontal" Spacing="12" VerticalAlignment="Center">
                <TextBlock Text="✅ Ready" Foreground="#88FF88" FontSize="12" FontWeight="SemiBold" />
                <TextBlock Text="|" Foreground="#555555" />
                <TextBlock Text="{x:Bind ViewModel.Title, Mode=OneWay}" 
                           Foreground="#CCFFFFFF" 
                           FontSize="12" />
                <TextBlock Text="|" Foreground="#555555" />
                <TextBlock x:Name="SelectionInfoText"
                           Text="Selection: none"
                           Foreground="#88FFFFFF"
                           FontSize="12" />
            </StackPanel>
        </Grid>
    </Grid>
</Page>
