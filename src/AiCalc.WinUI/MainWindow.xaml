<Page
    x:Class="AiCalc.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AiCalc"
    xmlns:models="using:AiCalc.Models"
    xmlns:services="using:AiCalc.Services"
    xmlns:converters="using:AiCalc.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
    <!-- Cell Context Menu (Phase 5 Task 16) -->
    <converters:BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <MenuFlyout x:Key="CellContextMenu">
            <MenuFlyoutItem Text="✂️ Cut" Click="Cut_Click" />
            <MenuFlyoutItem Text="📋 Copy" Click="Copy_Click" />
            <MenuFlyoutItem Text="📌 Paste" Click="Paste_Click" />
            <MenuFlyoutSeparator/>
            <MenuFlyoutItem Text="🗑️ Clear Contents" Click="ClearContents_Click" />
            <MenuFlyoutSeparator/>
            <MenuFlyoutSubItem Text="➕ Insert">
                <MenuFlyoutItem Text="↑ Row Above" Click="InsertRowAbove_Click" />
                 <MenuFlyoutItem Text="↓ Row Below" Click="InsertRowBelow_Click" />
                <MenuFlyoutItem Text="← Column Left" Click="InsertColumnLeft_Click" />
                <MenuFlyoutItem Text="→ Column Right" Click="InsertColumnRight_Click" />
            </MenuFlyoutSubItem>
            <MenuFlyoutSubItem Text="➖ Delete">
                <MenuFlyoutItem Text="❌ Row" Click="DeleteRow_Click" />
                <MenuFlyoutItem Text="❌ Column" Click="DeleteColumn_Click" />
            </MenuFlyoutSubItem>
            <MenuFlyoutSeparator/>
            <MenuFlyoutItem Text="⬇️ Fill Down" Click="FillDown_Click" />
            <MenuFlyoutItem Text="➡️ Fill Right" Click="FillRight_Click" />
            <MenuFlyoutSeparator/>
            <MenuFlyoutItem Text="🎨 Format Cell" Click="FormatCell_Click" />
            <MenuFlyoutItem Text="🖌️ Format Painter" Click="FormatPainter_Click" />
            <MenuFlyoutItem Text="🔁 Extract Formula..." Click="ExtractFormula_Click" />
            <MenuFlyoutItem Text="📜 View History" Click="ViewHistory_Click" />
        </MenuFlyout>

        <!-- Column header context menu (Phase 8 Task 26) -->
        <MenuFlyout x:Key="ColumnHeaderMenu">
            <MenuFlyoutItem Text="🙈 Hide Column" Click="HideColumn_Click" />
            <MenuFlyoutItem Text="🙊 Unhide All Columns" Click="UnhideAllColumns_Click" />
            <MenuFlyoutSeparator />
            <MenuFlyoutItem Text="❄️ Freeze Columns Here" Click="FreezeColumns_Click" />
            <MenuFlyoutItem Text="🔥 Unfreeze All" Click="UnfreezeAll_Click" />
            <MenuFlyoutSeparator />
            <MenuFlyoutItem Text="↔ Auto-fit Column Width" Click="AutoFitColumn_Click" />
            <MenuFlyoutItem Text="📏 Set Custom Width..." Click="SetColumnWidth_Click" />
            <MenuFlyoutSeparator />
            <MenuFlyoutItem Text="⟲ Reset to Default" Click="ResetColumnWidth_Click" />
        </MenuFlyout>

        <MenuFlyout x:Key="RowHeaderMenu">
            <MenuFlyoutItem Text="🙈 Hide Row" Click="HideRow_Click" />
            <MenuFlyoutItem Text="🙊 Unhide All Rows" Click="UnhideAllRows_Click" />
            <MenuFlyoutSeparator />
            <MenuFlyoutItem Text="❄️ Freeze Rows Here" Click="FreezeRows_Click" />
            <MenuFlyoutItem Text="🔥 Unfreeze All" Click="UnfreezeAll_Click" />
        </MenuFlyout>
    </Page.Resources>

    <Grid Background="{ThemeResource AppBackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
    <Grid Grid.Row="0" Background="{ThemeResource CardBackgroundBrush}" Padding="12,8" BorderBrush="{ThemeResource BorderBrushColor}" BorderThickness="0,0,0,1">
            <StackPanel Orientation="Horizontal" Spacing="10" VerticalAlignment="Center">
                <TextBlock Text="⚡ AiCalc Studio" FontSize="16" FontWeight="SemiBold" Foreground="{ThemeResource TextPrimaryBrush}" />
                <TextBox Width="240"
                         PlaceholderText="Workbook title"
                         Text="{x:Bind ViewModel.Title, Mode=TwoWay}"
                         VerticalAlignment="Center" />
                <Button Content="➕ New Sheet"
                        Click="NewSheetButton_Click" />
        <Button Content="🔄 Recalculate (F9)"
                        Click="RecalculateButton_Click"
                        ToolTipService.ToolTip="Recalculate all cells (skips Manual mode cells)" />
        <Button Content="💾 Save"
                        Click="SaveButton_Click" />
                <Button Content="📂 Load"
                        Click="LoadButton_Click" />
                <Button Content="📤 Export CSV"
                        Click="ExportCsvButton_Click"
                        ToolTipService.ToolTip="Export current sheet to CSV" />
                <Button Content="📥 Import CSV"
                        Click="ImportCsvButton_Click"
                        ToolTipService.ToolTip="Import CSV as new sheet" />
                <Button Content="⚙️ Settings"
                        Click="SettingsButton_Click" />
        <Button x:Name="ThemeToggleButton"
            Content="☀️ Light"
                        Click="ThemeToggle_Click"
                        ToolTipService.ToolTip="Toggle Light/Dark theme (Ctrl+T)" />
            </StackPanel>
        </Grid>

        <!-- Main Content -->
        <Grid x:Name="MainLayoutGrid" Grid.Row="1" Padding="16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition x:Name="FunctionsColumn" Width="280"/>
                <ColumnDefinition Width="8"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="8"/>
                <ColumnDefinition x:Name="InspectorColumn" Width="320"/>
            </Grid.ColumnDefinitions>
            
            <!-- Left Panel - Functions -->
            <Border x:Name="FunctionsPanel" Grid.Column="0" Background="{ThemeResource CardBackgroundBrush}" Padding="16" CornerRadius="8" Margin="0,0,6,0">
                <StackPanel Spacing="12">
                    <Grid>
                        <TextBlock Text="📚 Functions" FontSize="15" FontWeight="SemiBold" Foreground="{ThemeResource TextPrimaryBrush}" HorizontalAlignment="Left" />
                        <Button x:Name="ToggleFunctionsButton" 
                                Content="◀" 
                                Click="ToggleFunctionsPanel_Click"
                                Background="Transparent"
                                BorderThickness="0"
                                FontSize="12"
                                Foreground="{ThemeResource TextSecondaryBrush}"
                                HorizontalAlignment="Right"
                                ToolTipService.ToolTip="Hide Functions Panel" />
                    </Grid>
                    <ScrollViewer MaxHeight="600" VerticalScrollBarVisibility="Auto">
                        <StackPanel x:Name="FunctionsList" Spacing="2"/>
                    </ScrollViewer>
                </StackPanel>
            </Border>

            <!-- Left Splitter / Show Functions Button -->
        <Border x:Name="LeftSplitter" Grid.Column="1"
            Margin="0"
            Background="{ThemeResource BorderBrushColor}"
            CornerRadius="2"
            PointerPressed="LeftSplitter_PointerPressed"
            PointerMoved="LeftSplitter_PointerMoved"
            PointerReleased="LeftSplitter_PointerReleased"
            PointerCaptureLost="LeftSplitter_PointerReleased"
            PointerEntered="Splitter_PointerEntered"
            PointerExited="Splitter_PointerExited">
            <Button x:Name="ShowFunctionsButton"
                    Content="▶"
                    Visibility="Collapsed"
                    Click="ToggleFunctionsPanel_Click"
                    Background="{ThemeResource CardBackgroundBrush}"
                    BorderThickness="1"
                    BorderBrush="{ThemeResource BorderBrushColor}"
                    FontSize="12"
                    Foreground="{ThemeResource TextPrimaryBrush}"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Width="32"
                    Height="32"
                    CornerRadius="16"
                    ToolTipService.ToolTip="Show Functions Panel" />
        </Border>
            
            <!-- Center Panel - Spreadsheet -->
            <Border Grid.Column="2" Background="{ThemeResource CardBackgroundBrush}" Padding="8" CornerRadius="8">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Sheet Tabs -->
                          <TabView x:Name="SheetTabs"
                                      Grid.Row="0"
                                      TabWidthMode="Equal"
                                      SelectionChanged="SheetTabs_SelectionChanged"
                                      TabCloseRequested="SheetTabs_TabCloseRequested"
                                      Foreground="{ThemeResource TextPrimaryBrush}"
                                      IsAddTabButtonVisible="False">
                        <TabView.Resources>
                            <!-- Implicit Button style applied to TabView add/close buttons to use theme text color -->
                            <Style TargetType="Button">
                                <Setter Property="Foreground" Value="{ThemeResource TextPrimaryBrush}" />
                                <Setter Property="Background" Value="Transparent" />
                                <Setter Property="BorderBrush" Value="Transparent" />
                            </Style>
                            <Style TargetType="SymbolIcon">
                                <Setter Property="Foreground" Value="{ThemeResource TextPrimaryBrush}" />
                            </Style>
                            <Style TargetType="FontIcon">
                                <Setter Property="Foreground" Value="{ThemeResource TextPrimaryBrush}" />
                            </Style>
                        </TabView.Resources>

                        <!-- Rely on implicit Button style above for icons -->
                        <TabView.TabStripFooter>
                            <Button Click="NewSheetButton_Click"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Padding="4"
                                    Margin="6,0,0,0"
                                    ToolTipService.ToolTip="Add new sheet">
                                <SymbolIcon Symbol="Add"
                                            Foreground="{ThemeResource TextPrimaryBrush}"
                                            VerticalAlignment="Center" />
                            </Button>
                        </TabView.TabStripFooter>
                    </TabView>
                    
                    <!-- Spreadsheet Grid -->
                    <ScrollViewer x:Name="SpreadsheetScrollViewer" Grid.Row="1" 
                                  HorizontalScrollBarVisibility="Visible" 
                                  VerticalScrollBarVisibility="Visible"
                                  Background="{ThemeResource AppBackgroundBrush}">
                        <Grid>
                            <Grid x:Name="SpreadsheetGrid" Margin="12"/>
                            <TextBox x:Name="CellEditBox"
                                     Visibility="Collapsed"
                                     Background="{ThemeResource CardBackgroundBrush}"
                                     Foreground="{ThemeResource TextPrimaryBrush}"
                                     BorderBrush="{ThemeResource AccentBrush}"
                                     BorderThickness="2"
                                     Padding="4,8"
                                     FontSize="14"
                                     TextWrapping="NoWrap"
                                     CornerRadius="2"
                                     IsSpellCheckEnabled="False"
                                     GotFocus="CellEditBox_GotFocus"
                                     LostFocus="CellEditBox_LostFocus"
                                     KeyDown="CellEditBox_KeyDown"
                                     TextChanged="CellEditBox_TextChanged">
                                <TextBox.Resources>
                                     <Flyout x:Name="FunctionAutocompleteFlyout" 
                                         Placement="Bottom"
                                         AllowFocusOnInteraction="False"
                                         AllowFocusWhenDisabled="False"
                                         Opened="FunctionAutocompleteFlyout_Opened"
                                         Closed="FunctionAutocompleteFlyout_Closed">
                                        <Border Background="White"
                                                BorderBrush="#FF0078D4"
                                                BorderThickness="2"
                                                CornerRadius="6"
                                                Padding="4"
                                                MaxHeight="400"
                                                MinWidth="350"
                                                MaxWidth="450">
                                            <ListView x:Name="FlyoutFunctionList"
                                                      SelectionMode="Single"
                                                      ItemClick="FunctionAutocomplete_ItemClick"
                                                      IsItemClickEnabled="True"
                                                      IsHitTestVisible="True"
                                                      Background="White"
                                                      ScrollViewer.VerticalScrollBarVisibility="Auto"
                                                      ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                                      PointerPressed="FlyoutFunctionList_PointerPressed"
                                                      PointerWheelChanged="FlyoutFunctionList_PointerWheelChanged"
                                                      IsTabStop="False">
                                                <ListView.ItemTemplate>
                                                    <DataTemplate x:DataType="models:FunctionSuggestion">
                                                        <StackPanel Spacing="2" Padding="6,4">
                                                            <TextBlock Text="{Binding Name}" 
                                                                       FontWeight="SemiBold"
                                                                       FontSize="13"
                                                                       Foreground="Black"/>
                                                            <TextBlock Text="{Binding Description}" 
                                                                       FontSize="11"
                                                                       Foreground="#FF666666"
                                                                       TextWrapping="Wrap"
                                                                       MaxWidth="400"/>
                                                        </StackPanel>
                                                    </DataTemplate>
                                                </ListView.ItemTemplate>
                                            </ListView>
                                        </Border>
                                    </Flyout>
                                </TextBox.Resources>
                                <TextBox.Template>
                                    <ControlTemplate TargetType="TextBox">
                                        <Border Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="{TemplateBinding CornerRadius}">
                                            <ScrollViewer x:Name="ContentElement"
                                                          Padding="{TemplateBinding Padding}"
                                                          HorizontalScrollBarVisibility="Hidden"
                                                          VerticalScrollBarVisibility="Hidden"
                                                          VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </TextBox.Template>
                            </TextBox>
                        </Grid>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- Right Splitter / Show Inspector Button -->
            <Border x:Name="RightSplitter" Grid.Column="3"
            Margin="0"
            Background="{ThemeResource BorderBrushColor}"
            CornerRadius="2"
            PointerPressed="RightSplitter_PointerPressed"
            PointerMoved="RightSplitter_PointerMoved"
            PointerReleased="RightSplitter_PointerReleased"
            PointerCaptureLost="RightSplitter_PointerReleased"
            PointerEntered="Splitter_PointerEntered"
            PointerExited="Splitter_PointerExited">
            <Button x:Name="ShowInspectorButton"
                    Content="◀"
                    Visibility="Collapsed"
                    Click="ToggleInspectorPanel_Click"
                    Background="{ThemeResource CardBackgroundBrush}"
                    BorderThickness="1"
                    BorderBrush="{ThemeResource BorderBrushColor}"
                    FontSize="12"
                    Foreground="{ThemeResource TextPrimaryBrush}"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Width="32"
                    Height="32"
                    CornerRadius="16"
                    ToolTipService.ToolTip="Show Inspector Panel" />
        </Border>
            
            <!-- Right Panel - Cell Inspector -->
            <Border x:Name="InspectorPanel" Grid.Column="4" Background="{ThemeResource CardBackgroundBrush}" Padding="16" CornerRadius="8" Margin="6,0,0,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Spacing="16">
                        <Grid>
                            <TextBlock Text="🔍 Cell Inspector" FontSize="15" FontWeight="SemiBold" Foreground="{ThemeResource TextPrimaryBrush}" HorizontalAlignment="Left" />
                            <Button x:Name="ToggleInspectorButton" 
                                    Content="▶" 
                                    Click="ToggleInspectorPanel_Click"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    FontSize="12"
                                    Foreground="{ThemeResource TextSecondaryBrush}"
                                    HorizontalAlignment="Right"
                                    ToolTipService.ToolTip="Hide Inspector Panel" />
                        </Grid>
                        
                        <StackPanel x:Name="CellInspectorPanel" Spacing="12" Visibility="Collapsed">
                            <TextBlock x:Name="CellLabel" 
                                       Foreground="{ThemeResource AccentBrush}" 
                                       FontSize="16" 
                                       FontWeight="SemiBold" />
                            <TextBlock x:Name="CellClassTypeLabel"
                                       Foreground="{ThemeResource TextSecondaryBrush}"
                                       FontSize="13"
                                       FontWeight="Normal"
                                       Margin="0,0,0,4" />
                            
                            <StackPanel Spacing="6">
                                <TextBlock Text="Value" Foreground="{ThemeResource TextPrimaryBrush}" FontSize="13" FontWeight="SemiBold" />
                                <TextBox x:Name="CellValueBox" 
                                         AcceptsReturn="True" 
                                         Height="70" 
                                         TextWrapping="Wrap"
                                         TextChanged="CellValue_Changed" />
                            </StackPanel>
                            
                            <StackPanel Spacing="6">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <TextBlock Text="Formula" Foreground="{ThemeResource TextPrimaryBrush}" FontSize="13" FontWeight="SemiBold" />
                                    <TextBlock x:Name="FormulaSyntaxInfo" 
                                               Foreground="{ThemeResource TextSecondaryBrush}" 
                                               FontSize="11" 
                                               VerticalAlignment="Center"
                                               Visibility="Collapsed" />
                                </StackPanel>
                                <Grid>
                                    <TextBox x:Name="CellFormulaBox" 
                                             PlaceholderText="=SUM(A1,A2)"
                                             Height="40"
                                             TextChanged="CellFormula_Changed"
                            GotFocus="CellFormulaBox_GotFocus"
                            LostFocus="CellFormulaBox_LostFocus"
                                             KeyDown="CellFormulaBox_KeyDown" />
                                    
                                    <!-- Function Autocomplete Popup -->
                                    <Popup x:Name="FunctionAutocompletePopup"
                                           IsLightDismissEnabled="True"
                                           IsOpen="False"
                                           ShouldConstrainToRootBounds="False">
                                        <Border Background="{ThemeResource LayerFillColorDefaultBrush}"
                                                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                                BorderThickness="1"
                                                CornerRadius="4"
                                                Padding="4"
                                                MaxHeight="300"
                                                MinWidth="280">
                                            <ListView x:Name="FunctionAutocompleteList"
                                                      SelectionMode="Single"
                                                      ItemClick="FunctionAutocomplete_ItemClick"
                                                      IsItemClickEnabled="True"
                                                      MinWidth="240">
                                                <ListView.ItemTemplate>
                                                    <DataTemplate x:DataType="models:FunctionSuggestion">
                                                        <StackPanel Padding="8,4" Spacing="4">
                                                            <StackPanel Orientation="Horizontal" Spacing="6">
                                                                <TextBlock Text="{Binding CategoryGlyph}"
                                                                           FontSize="13"
                                                                           VerticalAlignment="Center"/>
                                                                <TextBlock Text="{Binding Name}"
                                                                           FontWeight="SemiBold"/>
                                                                <TextBlock Text="{Binding CategoryLabel}"
                                                                           FontSize="11"
                                                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                                            </StackPanel>
                                                            <TextBlock Text="{Binding Description}"
                                                                       FontSize="11"
                                                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                                       TextWrapping="Wrap"/>
                                                            <TextBlock Text="{Binding TypeHint}"
                                                                       FontSize="10"
                                                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                                       Visibility="{Binding HasTypeHint, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                                            <TextBlock Text="{Binding ProviderHint}"
                                                                       FontSize="10"
                                                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                                       Visibility="{Binding HasProviderHint, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                                        </StackPanel>
                                                    </DataTemplate>
                                                </ListView.ItemTemplate>
                                            </ListView>
                                        </Border>
                                    </Popup>

                                    <!-- Parameter Hint Popup -->
                                    <Popup x:Name="ParameterHintPopup"
                                           IsOpen="False"
                                           IsLightDismissEnabled="True">
                    <Border Background="{ThemeResource CardBackgroundBrush}"
                        BorderBrush="{ThemeResource BorderBrushColor}"
                                                BorderThickness="1"
                                                CornerRadius="6"
                                                Padding="8"
                                                MaxWidth="320">
                                            <StackPanel Spacing="4">
                                                <TextBlock x:Name="ParameterHintFunctionName"
                                                           Text="SUM"
                                                           FontWeight="SemiBold"
                                                           Foreground="{ThemeResource TextPrimaryBrush}"/>
                                                <ItemsControl x:Name="ParameterHintList">
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate x:DataType="local:ParameterHintItem">
                                                            <StackPanel Spacing="2">
                                                                <TextBlock Text="{x:Bind Name}"
                                                                           FontWeight="{x:Bind Weight}"
                                                                           Foreground="{x:Bind Brush}"
                                                                           FontSize="12"/>
                                                                <TextBlock Text="{x:Bind Description}"
                                                                           Foreground="{ThemeResource TextSecondaryBrush}"
                                                                           FontSize="10"
                                                                           TextWrapping="Wrap"
                                                                           Visibility="{x:Bind DescriptionVisibility}"/>
                                                            </StackPanel>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                                <TextBlock x:Name="ParameterHintDescription"
                                                           Text=""
                                                           Foreground="{ThemeResource TextSecondaryBrush}"
                                                           TextWrapping="Wrap"
                                                           FontSize="11"/>
                                            </StackPanel>
                                        </Border>
                                    </Popup>
                                </Grid>
                            </StackPanel>
                            
                            <!-- TEST: Visible function list -->
                            <Border x:Name="VisibleFunctionList"
                                    Background="{ThemeResource CardBackgroundBrush}"
                                    BorderBrush="{ThemeResource BorderBrushColor}"
                                    BorderThickness="1"
                                    CornerRadius="4"
                                    Padding="4"
                                    MaxHeight="200"
                                    Visibility="Collapsed">
                                <ListView x:Name="TestFunctionList"
                                          SelectionMode="Single"
                                          ItemClick="FunctionAutocomplete_ItemClick"
                                          IsItemClickEnabled="True">
                                    <ListView.ItemTemplate>
                                        <DataTemplate x:DataType="models:FunctionSuggestion">
                                            <TextBlock Text="{Binding Name}" Padding="4"/>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                            </Border>
                            
                            <StackPanel Spacing="6">
                                <TextBlock Text="Automation" Foreground="{ThemeResource TextPrimaryBrush}" FontSize="13" FontWeight="SemiBold" />
                                <ComboBox x:Name="AutomationModeBox"
                                          HorizontalAlignment="Stretch"
                                          SelectionChanged="AutomationMode_Changed">
                                    <ComboBoxItem Content="Manual" IsSelected="True"/>
                                    <ComboBoxItem Content="OnEdit"/>
                                    <ComboBoxItem Content="OnLoad"/>
                                    <ComboBoxItem Content="Continuous"/>
                                </ComboBox>
                            </StackPanel>
                            
                            <Button Content="▶ Evaluate Cell" 
                                    Click="EvaluateCell_Click"
                                    HorizontalAlignment="Stretch" />
                            
                            <StackPanel Spacing="6">
                                <TextBlock Text="Notes" Foreground="{ThemeResource TextPrimaryBrush}" FontSize="13" FontWeight="SemiBold" />
                                <TextBox x:Name="CellNotesBox" 
                                         AcceptsReturn="True" 
                                         Height="80"
                                         TextWrapping="Wrap"
                                         PlaceholderText="Add notes..."
                                         TextChanged="CellNotes_Changed" />
                            </StackPanel>
                        </StackPanel>
                        
                        <StackPanel x:Name="NoCellPanel" Spacing="8">
                            <TextBlock Text="💡 No cell selected" 
                                       Foreground="{ThemeResource TextSecondaryBrush}"
                                       FontSize="14"
                                       TextAlignment="Center" />
                            <TextBlock Text="Click on a cell to edit" 
                                       Foreground="{ThemeResource TextSecondaryBrush}"
                                       FontSize="12"
                                       TextWrapping="Wrap"
                                       TextAlignment="Center" />
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>

        <!-- Status Bar -->
    <Grid Grid.Row="2" Background="{ThemeResource CardBackgroundBrush}" Height="32" Padding="16,0">
            <StackPanel Orientation="Horizontal" Spacing="12" VerticalAlignment="Center">
                <TextBlock Text="✅ Ready" Foreground="{ThemeResource AccentBrushAlt}" FontSize="12" FontWeight="SemiBold" />
                <TextBlock Text="|" Foreground="{ThemeResource BorderBrushColor}" />
                <TextBlock Text="{x:Bind ViewModel.Title, Mode=OneWay}" 
                           Foreground="{ThemeResource TextPrimaryBrush}" 
                           FontSize="12" />
                <TextBlock Text="|" Foreground="{ThemeResource BorderBrushColor}" />
                <TextBlock x:Name="SelectionInfoText"
                           Text="Selection: none"
                           Foreground="{ThemeResource TextSecondaryBrush}"
                           FontSize="12" />
            </StackPanel>
        </Grid>
    </Grid>
</Page>

