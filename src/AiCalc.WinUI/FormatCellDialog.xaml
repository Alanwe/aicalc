<ContentDialog
    x:Class="AiCalc.FormatCellDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Format Cell"
    PrimaryButtonText="Apply"
    CloseButtonText="Cancel">

    <StackPanel Spacing="16" Width="320">
        <TextBlock Text="Background" FontWeight="SemiBold" />
        <ColorPicker x:Name="BackgroundPicker" IsAlphaEnabled="True" />

        <TextBlock Text="Text" FontWeight="SemiBold" />
        <ColorPicker x:Name="ForegroundPicker" IsAlphaEnabled="True" />

        <StackPanel Orientation="Horizontal" Spacing="12" VerticalAlignment="Center">
            <TextBlock Text="Font Size" VerticalAlignment="Center" />
            <Slider x:Name="FontSizeSlider" Minimum="8" Maximum="36" Width="160"/>
            <TextBlock Text="{Binding ElementName=FontSizeSlider, Path=Value, StringFormat='{}{0:F0}'}" VerticalAlignment="Center" />
        </StackPanel>

        <StackPanel Orientation="Horizontal" Spacing="12">
            <CheckBox x:Name="BoldToggle" Content="Bold" />
            <CheckBox x:Name="ItalicToggle" Content="Italic" />
        </StackPanel>

        <StackPanel Orientation="Horizontal" Spacing="12" VerticalAlignment="Center">
            <TextBlock Text="Border" VerticalAlignment="Center" />
            <Slider x:Name="BorderSlider" Minimum="0" Maximum="4" Width="160" />
            <TextBlock Text="{Binding ElementName=BorderSlider, Path=Value, StringFormat='{}{0:F1}'}" VerticalAlignment="Center" />
        </StackPanel>
    </StackPanel>
</ContentDialog>
